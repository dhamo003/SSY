                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title"></h4>
                    </div>
                    <div class="modal-body" style="height: 300px;overflow-y: auto;">
                       
                        <div class="col-md-6">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th colspan="2">New Bank Details</th>


                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>District</td>
                                        <td><label id="lblNewDistrict"></label></td>

                                    </tr>
                                    <tr>
                                        <td>Bank Name </td>
                                        <td><label id="lblNewBank"></label></td>

                                    </tr>
                                    <tr>
                                        <td>Account Number</td>
                                        <td><label id="lblNewActNumber"></label></td>

                                    </tr>
                                    <tr>
                                        <td>Location</td>
                                        <td><label id="lblNewLocation"></label></td>

                                    </tr>
                                    <tr>
                                        <td>Branch Name</td>
                                        <td><label id="lblNewBranchName"></label></td>


                                    </tr>
                                    <tr>
                                        <td>Address</td>
                                        <td><label id="lblNewBranchAddress"></label></td>


                                    </tr>
                                    <tr>
                                        <td>IFSC Code</td>
                                        <td><label id="lblNewIFSCCode"></label></td>

                                    </tr>


                                </tbody>
                            </table>

                            <div class="panel panel-default">
                                <div class="panel-heading">
