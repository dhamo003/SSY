                $("#disid").attr("multiple", "multiple");
                $('#disid').multiselect({
                    columns: 3,
                    placeholder: 'Select Languages',
                    search: true,
                    includeSelectAllOption: true
                })
                $("#disid").multiselect('rebuild');

                $('option', $('#disid')).each(function (element) {
                    $(this).removeAttr('selected').prop('selected', false);
