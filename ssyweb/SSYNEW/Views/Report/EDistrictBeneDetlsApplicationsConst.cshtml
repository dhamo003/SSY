    function GetReport() {
        var fromdate = $('#fromdate').val();
        var todate = $('#todate').val();
        var Staus = $("#Status").val();



		$.get('@Url.Action("GetEDistrictBeneDetlsAppliationsConst", "Report")', { userId: deptuserid, fromDate: fromdate, toDate: todate, Status: $("#Status").val() }, function (result) {
             
