                    <img src="/Home/GetCaptchaImage" title="Captcha" style="margin-left: 90px;border:1px solid #3498db" />
                </div>
                <br />

                <div class="row">

                    <div class="col-md-4">

                        <label class="">Captcha : </label>

                        @Html.TextBox("clientCaptcha", null, new { @class = "form-control", name = "clientCaptcha", placeholder = "Write above text exactly", style = "margin-top: -33px;margin-left: 74px;width: 199px;" })


                    </div>


                    <div style="margin-left:295px;margin-top: -9px">

                        <a class="btn btn-primary" onclick="DistWiseData()">Submit</a>

