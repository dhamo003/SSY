                </div>

            </div>
        </div>

       

        <div class="col-sm-12">
            <div class=" content-box-inner">

                <div class="embed-responsive embed-responsive-16by9 z-depth-1" id="tbldistrict" style="display:none;">
                    <iframe id="ifr"  class="embed-responsive-item"  style="height: 101%" allowfullscreen></iframe>

                </div>

                @*<div id="tbldistrict" style="display:none;height:350px;">
                
                    <iframe name="ifr" id="ifr" style="width: 103%;height:100%; position: relative; border: none; margin-bottom:5%;margin-left:22px;margin-right:150px;padding-right:50px; max-height: 400px;overflow-y:auto; border-radius: 0px; "></iframe>



                </div>*@
        </div>
    </div>
</div>

    </div>




<script type="text/javascript">

    $(document).ready(function () {

        $('.DistWiseStatus').DataTable({
            "bSort": false,
		});

		$("#divCaptcha").hide();
		$("#tbldistrict").show();
		
		var url = "/SSYIDCard/GeneralReport.aspx";

		$('iframe#ifr').attr('src', url);

    });



    function DistWiseData() {

        if($("#clientCaptcha").val() == "" || $("#clientCaptcha").val() == null )
        {

            alert("Please enter captcha");
            $("#clientCaptcha").focus();
            return false;

        }


        else
        {



            $.get('@Url.Action("ValidateCaptcha", "Home")', {Captcha : $("#clientCaptcha").val() }, function (Result) {


                if(Result == "999"){
                    $("#divCaptcha").show();
                    alert("Sorry, please write exact text as written above.");
                    $("#clientCaptcha").focus();

                    return false;
                }
                else
                {
                    $("#tbldistrict").show();
                    $("#divCaptcha").hide();
                    var url = "/SSYIDCard/GeneralReport.aspx";

                    $('iframe#ifr').attr('src', url);

                }


            });






        }





        // });
    }

    
    function DistrictWise()
    {
        //alert("DistrictWiseStatus");
        window.location.href="DistrictWiseStatus";
    }


</script>