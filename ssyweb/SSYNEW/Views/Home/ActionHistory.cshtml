@{
    ViewBag.Title = "Deduplication Groups";
    Layout = null;
}
<script src="~/Content/usermodule/jquery.min.js"></script>
<link href="~/Content/usermodule/bootstrap.min.css" rel="stylesheet" />
<script>
    jQuery(document).ready(function () {
        $("#actsub").click(function () {
            var dt = confirm("Are you sure, you want to submit this action message?");
            if (dt == true) {
                var actText = $("#actHist").val();
                $.ajax({
                    url: '/Home/SaveActionHistory',
                    type: 'GET',
                    data: { act: actText },
                    success: function (res) {
                        alert(res);
                        location.href = "/Home/DeDuplication";
                    }
                });
            }
            else
                return false;
        });
    });
</script>
<div class="modal-dialog" style="width: 50% !important; margin-left: auto; margin-right: auto">
    @using (Html.BeginForm("SaveActionHistory", "Home", FormMethod.Post, new { id = "ActHistory", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="modal-content ">
            <div class="modal-header">
                <button aria-hidden="true" class="close" type="button" data-dismiss="modal">×</button>
                <b id="myModalLabel" class="modal-title">
                    Action Details
                </b>
            </div>
            <div class="modal-body row">
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-10">
                        <div class="form-group">
                            <div class="input-group extra-space">
                                <span class="input-group-addon input-label">Action</span>
                                @Html.TextArea("action", "", new { @class = "form-control", @id = "actHist" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-1"></div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-10">
                        <b><u>Previous Actions:</u></b>
                        <br />
                        <br />
                        <ol>
                            @foreach (var mn in ViewBag.PreviousActions)
                            {
                                <li>@mn.Action</li>
                            }
                        </ol>
                    </div>
                    <div class="col-sm-1"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="actsub">Submit</button>
            </div>
        </div>
    }
</div>
