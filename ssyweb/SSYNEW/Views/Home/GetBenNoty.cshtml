@{
    ViewBag.Title = "GetBenNoty";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<br/>
<div class="container-fliud">
    <div class="col-md-10" style="margin-left:110px;">
        <table class="table table-striped table-bordered notifications">
            <thead>
                <tr>
                 
                    <th><b>Date</b></th>
                    <th><b>Description</b></th>
                    <th><b>Download</b></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $.get('@Url.Action("GetNotyListPortal", "Home")', {}, function (result) {
            $('.notifications tbody').empty();
            $.each(result, function (i, data) {
              
                if (data.Path == "" || data.Path == null)
                {
                    $('.notifications').append('<tr><td>' + data.Date + '</td><td>' + data.Notification + '</td><td>'+"No File"+'</td></tr>')
                }
                else
                {
                    $('.notifications').append('<tr><td>' + data.Date + '</td><td>' + data.Notification + '</td><td><a href=' + data.Path + ' target="_blank"  onClick = "ReadNoty(' + data.Id + ');" style="color: black !important; text-decoration: none" download>Download</a></td></tr>')
                }
              });
        });
    });
   
</script>
