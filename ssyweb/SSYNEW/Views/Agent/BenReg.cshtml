<div id="divIframe">


    <iframe src="" class="col-md-12 iframeheight loadurl" id="RegFrame" frameborder="0" width="1200" height="600"></iframe>
</div>
<script>
    $(document).ready(function () {

        var regtype = "";

    });

    $(".btnback").click(function () {

        $("#divIframe").hide(1000);
        $("#CheckRegType").show(1000);
       
        $("#RegFrame").attr("src", "");

        $( ".CheckReg" ).prop( "checked", false );

    });

    function LoadRegPage()
    {
        $("#DivTypeReg").hide(1000);
        $("#divIframe").show(1000);
        if (regtype == "Legacy1")
        {
            $("#RegFrame").attr("src", "/Registration/BeniRegistrationPart1?Status=Legacy1&Id=&CreatedBy="+deptuserid);

        }
        if (regtype == "Legacy2") {
            $("#RegFrame").attr("src", "/Registration/BeniRegistrationPart1?Status=Legacy2&Id=&CreatedBy="+deptuserid);

        }
        if (regtype == "NewReg") {
            $("#RegFrame").attr("src", "/Registration/BeniRegistrationPart1?Status=NewReg&Id=&CreatedBy="+deptuserid);
        }

    }

    $(".CheckReg").change(function () {

        $("#CheckRegType").hide();
        // $("#DivTypeReg").show();
        $("#divbackbutton").show();
        regtype = $("input[name='CheckReg']:checked").val()

        LoadRegPage();

    });


