    function FinalSubmit() {

		if ($("#benefirstname").val() == "" || $("#benefirstname").val() == null || $("#benefirstname").val() == 0) {
            alert("Please Enter First Name");
			$("#benefirstname").focus();
            return false;
        }
		if ($("#benelastname").val() == "" || $("#benelastname").val() == null || $("#benelastname").val() == 0) {
		alert("Please Enter Last Name");
			$("#benelastname").focus();
		return false;
		}
		//if ($("#benemiddlename").val() == "" || $("#benemiddlename").val() == null || $("#benemiddlename").val() == 0) {
  //          alert("Please Enter Middle Name");
		//	$("#benemiddlename").focus();
  //          return false;
  //      }
		
		if ($("#idproofdoc").val() == "" || $("#idproofdoc").val() == null || $("#idproofdoc").val() == 0) {
			alert("Please Upload ID Proof.");
			$("#idproofdoc").focus();
			return false;
		}
		
        var form = $('#form')[0];

        var data = new FormData(form);



