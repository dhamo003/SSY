    function onlynumber(e, t) {
        if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
            return false;
        }
    }
    function IsAlphaNumaric(e) {
        if ((e.keyCode >= 186 && e.keyCode <= 188) || (e.keyCode == 190) || e.keyCode == 191 ||
            e.keyCode == 192 || e.keyCode == 109 || (e.keyCode >= 219 && e.keyCode <= 222) || (e.keyCode >= 110 && e.keyCode <= 111) ||
            (e.keyCode >= 106 && e.keyCode <= 107) || e.keyCode == 59 || e.keyCode == 189 || e.keyCode == 61 || e.keyCode == 173 ||
            ((e.keyCode >= 48 && e.keyCode <= 57) && e.shiftKey == true)) {
            return false;
        }
    }

    $("#ifsccode").keypress(function () {
        var ifscval = $(this).val();
        if (ifscval.length == 4) {
            $(this).val(ifscval + "0");
            return false;
        }
    });


    function GetHistory(benSno) {
        $.get('@Url.Action("GetBenePersonalDetEditHistory", "Home")', { benSno: benSno}, function (result) {
             
			var table = $('.tblBenePersDetHis').DataTable();
            table.destroy();

			$('.tblBenePersDetHis tbody').empty();
            $.each(result, function (i, data) {

				if (data.Status == "Pending") {
					$("#divBtn").hide();
				}
				$('.tblBenePersDetHis').append('<tr><td>' + data.Sno + '</td><td>' + data.BeneFirstName + '</td><td>' + data.BeneLastName + '</td><td>' + data.BeneMiddleName + '</td><td>' + data.Status + '</td><td>' + data.ReqDate + '</td><td>' + data.VerifiedDate + '</td><td>' + data.Remarks + '</td>')
            });
			$('.tblBenePersDetHis').DataTable({

            });

        });

    }
</script>
